          </ul>
        </div>
        <div class='col-3'>
          <ul class='list-unstyled'>
            <li><%= link_to 'About Us', about_us_path, class: 'nav-link' %></li>
            <li><%= link_to 'News', news_index_path, class: 'nav-link' %></li>
            <li><%= link_to 'Shop', spree_path, target: 'new', class: 'nav-link' %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
