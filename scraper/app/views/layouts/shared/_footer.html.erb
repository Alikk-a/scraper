            <%= image_tag 'logos/footer-logo-orange.png' %>
          <% end %>
        </div>
        <div class="headline-media" style='display: none;'>
          <h2>Headline Media Logos</h2>
        </div>
      </div>    

      <div class='row'>
        <div class='col-3'>
